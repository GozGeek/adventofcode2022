0 SAVE "D:1.BAS"
10 DIM A$(8),ELF(1000):MAX=0:E=0
20 OPEN #1,4,0,"D:CALORIES.TXT"
25 TRAP 70
30 INPUT #1,A$
35 IF A$="" THEN ? "NEW ELF":GOTO 200
40 REM ? "GOT ";A$;
50 TOTAL=TOTAL+VAL(A$)
60 REM PRINT TOTAL;
65 GOTO 30
70 CLOSE #1
80 ? "MAX CALORIES: ";MAX
200 IF TOTAL>MAX THEN MAX=TOTAL:? "NEW MAX IS: ";MAX
210 TOTAL=0
220 GOTO 30
