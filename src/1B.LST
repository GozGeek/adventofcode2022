0 SAVE "D:1A.BAS"
10 DIM A$(8),ELF(1000):MAX=0:E=0
20 OPEN #1,4,0,"D:CALORIES.TXT"
25 TRAP 70
30 INPUT #1,A$
35 IF A$="" THEN ? "NEW ELF":GOTO 200
40 REM ? "GOT ";A$;
50 TOTAL=TOTAL+VAL(A$)
60 REM PRINT TOTAL;
65 GOTO 30
70 CLOSE #1
80 MODIFIED=0
90 FOR X=0 TO E-1
100 IF ELF(X+1)<ELF(X) THEN 140
110 A=ELF(X+1):B=ELF(X)
120 ELF(X+1)=B:ELF(X)=A
130 MODIFIED=1
140 NEXT X
145 ? "PASS... ";
150 IF MODIFIED=1 THEN GOTO 80
155 MAX=0
160 FOR X=0 TO 2
165 MAX=MAX+ELF(X)
170 NEXT X
180 ? "TOP 3 TOTAL CALORIES: ";MAX
199 END 
200 ELF(E)=TOTAL
210 TOTAL=0:E=E+1
220 GOTO 30
