FILE$="D:6DATA.TXT"

DIM RADIO(4096)

OPEN #1,4,0,FILE$

RP=0
FOR X=1 TO 13
 GET #1,C
 ?CHR$(C);
 RADIO(RP)=C
 INC RP
NEXT X

GET #1,C
REPEAT
 ? CHR$(C);
 RADIO(RP)=C
 INC RP

 DUP=0
 FOR X=RP TO RP-14 STEP -1
  FOR Y=RP TO RP-14 STEP -1
   IF X<>Y 
    IF RADIO(X)=RADIO(Y) THEN DUP=1
   ENDIF
  NEXT Y
 NEXT X 

 IF DUP=0 
  ?
  ? "POSITION: ";STR$(RP)
  EXIT
 ENDIF
 GET #1,C
UNTIL ERR()>1

CLOSE #1

